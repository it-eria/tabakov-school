{{#about}}
<section class="content-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
         <div class="row">
            <div class="col-12 col-lg-6">
              <div class="section-title text-left">
                  <div data-parent="{{data-about-title}}" class="txt-shadow">
                    <h2>
                      {{about-title}}              
                    </h2>
                  </div>  
              </div>
              <div class="text-about">
                <p>
                 {{text-about-1}} 
                </p>
                <p>
                 {{text-about-2}}
                </p>
              </div>
              <div class="text-right mt-4">
                  <div class="btn-pos-min">
                    <a href="#" class="btn btn_slide-more">{{slide-btn-text}}</a>    
                  </div>       
              </div>
            </div>
            <div class="col-12 col-lg-6 about-img">
              <img src="assets/img/{{image-name}}" alt="thumbnail" class="img-fluid d-block mx-auto">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/about}}