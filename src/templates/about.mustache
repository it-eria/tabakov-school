{{#about}}
<section class="content-block {{additional-classes}}">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
         <div class="row">
            <div class="col-12 col-md-6 col-lg-5">
              <div class="d-flex flex-column h-100">
                <div class="section-title section-title_b text-left">
                  <div data-parent="{{data-about-title}}" class="txt-shadow txt-shadow_left">
                    <h2>
                      {{about-title}}              
                    </h2>
                  </div>
                  {{#title-desk}}
                  <div class="text-right title-desk mt-2">
                    <span>
                      Засновник та творчий директор
                    </span>
                  </div> 
                  {{/title-desk}}
                </div>
                <div class="text-about">
                  {{#paragraphs}}
                    <p>
                      {{{text-about}}} 
                    </p>
                  {{/paragraphs}}
                </div>
                <div class="mt-auto">
                    <div class="btn-pos-min mt-4 ml-4 {{add-class}}">
                      <a href="#" class="btn btn_slide-more">{{slide-btn-text}}</a>    
                    </div>       
                </div>
              </div>
            </div>
            <div class="col-12 col-md-6 col-lg-7 about-img">
              <img src="assets/img/{{image-name}}" alt="thumbnail" class="img-fluid d-block mx-auto">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/about}}