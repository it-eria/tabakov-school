{{#teachers-carousel}}
<section class="content-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="row">
          <div class="col-12">
              <div class="section-title">
                  <div data-parent="{{data-about-title}}" class="txt-shadow">
                    <h2>
                      {{about-title}}              
                    </h2>
                  </div>  
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div data-js="teachers-carousel">
              {{#slides}}
              <!-- Slide -->
              <div class="teachers-carousel__slide mx-3">
                <div class="slide-outer" style="background-image: url(assets/img/{{slide-name}}.jpg);"></div>
                <div class="info-section">
                  <h4 class="d-flex justify-content-center">{{slide-title}}</h4>
                  <p class="d-flex justify-content-center">{{slide-description}}</p>
                  <a href="#" class="btn btn_slide-more">Дізнитись більше</a>            
                </div>
              </div>
              <!-- /Slide -->
              {{/slides}}
            </div>
          </div>
        </div>
      </div>
    </div>  
  </div>
</section>
{{/teachers-carousel}}